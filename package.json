{
  "name": "extok",
  "displayName": "OK Entrega (Snippets/Formatter)",
  "description": "Atalhos de padronização de código do OK Entrega",
  "version": "0.3.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sjvinicius/ExtOkEntrega.git"
  },
  "publisher": "ViniciusSilvadeJesus",
  "categories": [
    "Snippets",
    "Formatters",
    "Other"
  ],
  "icon": "images/logo/oklogo.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [],
    "commands": [
      {
        "command": "extok.openSettings",
        "title": "Configurações"
      }
    ],
    "configuration": [
      {
        "title": "OK Entrega (Snippets/Formatter)",
        "properties": {
          "okDevUserId": {
            "type": "string",
            "default": "${9999:devUserId}",
            "description": "ID Usuário OK Entrega (Desenvolvimento)"
          },
          "okHmlUserId": {
            "type": "string",
            "default": "${9999:hmlUserId}",
            "description": "ID Usuário OK Entrega (Homologação)"
          },
          "okProdUserId": {
            "type": "string",
            "default": "${9999:ProdUserId}",
            "description": "ID Usuário OK Entrega (Produção)"
          },
          "[php]": {
            "editor.defaultFormatter": "DEVSENSE.phptools-vscode",
            "editor.tabSize": 4
          },
          "php.codeLens.enabled": true,
          "php.inlayHints.parameters.enabled": false,
          "php.inlayHints.parameters.suppressNameMatchingValue": false,
          "php.inlayHints.types.suppressVariableFromLiteral": false,
          "php.inlayHints.types.return": false,
          "php.format.codeStyle": "PSR-12",
          "php.format.rules.openBraceOnNewLineForFunctions": true,
          "php.format.rules.openBraceOnNewLineForBlocks": false,
          "php.format.rules.openBraceOnNewLineForTypes": true,
          "php.format.rules.addCommaAfterLastArrayElement": true,
          "prettier.useTabs": true,
          "prettier.tabWidth": 4,
          "prettier.quoteProps": "consistent",
          "prettier.singleQuote": false,
          "php-cs-fixer.autoFixByBracket": true,
          "prettier.printWidth": 120
        }
      }
    ],
    "languages": [
      {
        "id": "php",
        "aliases": [
          "php",
          "php"
        ],
        "extensions": [
          ".php",
          ".php8"
        ]
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "extok.openSettings",
          "group": "navigation",
          "when": "viewItem == extok"
        }
      ]
    }
  },
  "keywords": [
    "Ok",
    "Ok Entrega",
    "Ok ENTREGA",
    "OKENTREGA",
    "OK",
    "ok"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}